{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true,
        "js": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "semi": "error",
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-single"],
    "arrow-body-style": ["error", "as-needed"]
  }
}