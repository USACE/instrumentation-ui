{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "semi": "error",
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-single"],
    "arrow-body-style": ["error", "as-needed"],
    "indent": [
      "error",
      2,
      {
        "VariableDeclarator": "first",
        "SwitchCase": 1
      }
    ]
  }
}